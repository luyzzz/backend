# =====================================================
# CONFIGURAÇÃO PARA VERCEL - PRODUCTION
# =====================================================
# Copie estas variáveis para: Vercel Dashboard → Settings → Environment Variables

# Database Configuration (OBRIGATÓRIO)
# Use um banco MySQL online: PlanetScale, Railway, ou Clever Cloud
DB_TYPE=mysql
DB_USER=seu_usuario_aqui
DB_PASSWORD=sua_senha_aqui
DB_HOST=seu-host.planetscale.net
DB_PORT=3306
DB_NAME=projeto_frameworks

# JWT Secret (OBRIGATÓRIO - MUDE!)
# Gere uma chave forte: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=sua-chave-secreta-forte-aqui-mude-isso

# Flask Configuration
SECRET_KEY=outra-chave-secreta-aqui
FLASK_ENV=production
FLASK_APP=app.py

